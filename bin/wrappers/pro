#!/usr/bin/env python3
"""
Legacy wrapper for accessing THRUST Pro features.

This script invokes the ``pro`` subcommand of ``bin/thrust`` with
whatever arguments are provided.  It allows existing workflows
that call ``pro`` directly to continue functioning after the
introduction of the unified ``cipher`` CLI.
"""
import os
import sys
import subprocess


def main() -> None:
    # Determine path to the thrust script
    script_dir = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
    thrust_path = os.path.join(script_dir, "thrust")
    # Prepend 'pro' subcommand to user arguments
    cmd = [thrust_path, "pro"] + sys.argv[1:]
    result = subprocess.run(cmd)
    sys.exit(result.returncode)


if __name__ == "__main__":  # pragma: no cover
    main()